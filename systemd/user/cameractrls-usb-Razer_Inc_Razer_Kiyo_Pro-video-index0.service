[Unit]
Description=Restore usb-Razer_Inc_Razer_Kiyo_Pro-video-index0 controls

[Service]
Type=oneshot
ExecStart=/usr/lib/python3.11/site-packages/CameraCtrls/cameractrls.py -d /dev/v4l/by-id/usb-Razer_Inc_Razer_Kiyo_Pro-video-index0 -c zoom_absolute=200,pixelformat=YUYV,card=Razer Kiyo Pro,driver=uvcvideo,path=/dev/v4l/by-id/usb-Razer_Inc_Razer_Kiyo_Pro-video-index0,real_path=/dev/video0,resolution=640x480,fps=60

[Install]
WantedBy=graphical-session.target
